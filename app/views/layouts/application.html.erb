<!DOCTYPE html>
<html>
<head>
  <title>Translate</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


<script>
jQuery(document).ready(function($) {
$('#mybutton').click(function() { 
$.getJSON("http://openapi.baidu.com/public/2.0/bmt/translate?client_id=iEPUSFHqPtNGET1IbwrdM6cF&q=today&from=auto&to=auto",function(json){
var s=""
$(json).each(function(i){
s+=json[i].dst;
}));
$("#outputvalue").val(s);
});
});
</script>


</head>
<body>

<%= yield %>

</body>
</html>
